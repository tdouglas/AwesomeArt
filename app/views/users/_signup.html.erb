<%= form_for @user, :remote => true, :class => "test" do |f| %>
  Email address:</br><%= f.text_field :email, :id => "sign-up-email" %></br>
  Password:</br><%= f.password_field :password, :id => "sign-up-password" %></br>
  Confirm Password:</br><%= f.password_field :password_confirmation, :id => "sign-up-password-confirmation" %>
  <%= f.submit value = "Sign up", :class => "btn", :id => "sign-up-button" %>
<% end %>